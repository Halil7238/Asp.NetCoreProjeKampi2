@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
         <i class="mdi mdi-format-list-bulleted menu-icon"></i>
        </span> Bloglarım
    </h3>
    <nav aria-label="breadcrumb">
        <a class="text-white text-decoration-none" href="/Writer/BlogAdd">
            <button type="button" class="btn btn-gradient-primary btn-icon-text d-flex card-columns">
                Yeni Blog Oluştur
            </button>
        </a>
    </nav>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @*<div class="row justify-content-between">
                    <div class="col-4 col-xs-12">
                        <h1 class="card-title">Bloglarım</h1>
                    </div>
                    <div class=" col-xs-12 col-2">
                        <a class="text-white text-decoration-none" href="/Writer/BlogAdd">
                            <button type="button" class="btn btn-gradient-primary btn-icon-text d-flex card-columns">
                                Yeni Blog Oluştur
                            </button>
                        </a>
                    </div>
                </div>*@


                @* <p class="card-description">
                Add class <code>.table</code>
                </p>*@
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Başlık</th>
                            @* <th>İçerik</th>*@
                            <th>Durum</th>
                            <th>Kategori</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><image src="@item.BlogThumbnailImage" style="border-radius:1px !important; width:5em !important; height:5em !important;"></image> </td>
                                <td>@item.BlogTitle</td>
                                @* <td>@item.BlogContent.Substring(0,item.BlogContent.Substring(0,30).LastIndexOf("")) ...</td>*@
                                @if (item.BlogStatus == true)
                                {
                                    <td><label class="badge badge-gradient-success">Aktif</label></td>
                                }
                                else
                                {
                                    <td><label class="badge badge-gradient-danger">Pasif</label></td>
                                }

                                <td><label class="badge badge-gradient-info">@item.Category.CategroyName</label></td>

                                <td>@(((DateTime)item.BlogCreadDate).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a class="text-white text-decoration-none" href="/Writer/BlogUpdate/@item.BlogId">
                                        <button type="button" class="btn btn btn-gradient-warning btn-icon-text">
                                            Güncelle <i class="mdi mdi-file-check btn-icon-append"></i>
                                        </button>
                                    </a>
                                    <button type="button" class="btn btn btn-gradient-danger btn-icon-text" data-toggle="modal" data-target="#exampleModalCenter">
                                        Sil <i class="mdi mdi-alert btn-icon-prepend"></i>
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Silmek istediğinizden emin misiniz?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                                                    <a class="text-white text-decoration-none" href="/Writer/DeleteBlog/@item.BlogId">
                                                        <button type="button" class="btn btn btn-gradient-danger btn-icon-text">
                                                            Sil
                                                        </button>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }

                        @*<tr>
                        <td>Messsy</td>
                        <td>53275532</td>
                        <td>15 May 2017</td>
                        <td><label class="badge badge-warning">In progress</label></td>
                        </tr>
