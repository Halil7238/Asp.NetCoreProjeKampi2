@model IEnumerable<EntityLayer.Concrete.Comment>


@if (Model.Count() != 0)
{
    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body ">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>
    }
}
else
{
    <div class=" bg-light p-2">
        <h6>Daha Önce Yorum Yazılmamış. İlk Yorumu Siz Yazın...</h6>
    </div>

}
