@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="tech-btm">
    <h4>Yazarın Son Postları</h4>
@foreach (var item in Model)
    {
     <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/BlogDetail/@item.BlogId">
                <img src="@item.BlogThumbnailImage" class="img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/BlogDetail/@item.BlogId">@item.BlogTitle</a>
            </h5>
            <p>@item.BlogContent.Substring(0,item.BlogContent.Substring(0,30).LastIndexOf("")) ...</p>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"> @(((DateTime)item.BlogCreadDate).ToString("dd-MMM-yyyy"))</i> 
                </span>
            </div>
        </div>

    </div>   
    }    
    
 
</div>